<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_systemes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jean.africapp2.Systemes"
    tools:showIn="@layout/activity_systemes"
    android:background="#FF472562">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF472562"
        android:id="@+id/linearsys1"
        android:gravity="center">

        <TextView
            android:text="2x-7/3y+4z+t-6s-4u=34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:id="@+id/textView5"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFE6ABEE"
            android:textStyle="italic" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/equation"
                android:textSize="24sp"
                android:textColor="#FFF8F5F9"
                tools:textStyle="bold|italic" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical" >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/linearsys2"/>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearsys1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF472562">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF472562"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearsys1"
                    android:background="#FF472562">

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:id="@+id/retour"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@android:drawable/ic_delete" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:id="@+id/ajouter"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@android:drawable/ic_input_add" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:id="@+id/resoudre"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@android:drawable/ic_menu_send" />
                </LinearLayout>
                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/table">
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent">

                        <Button android:text="/"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textColor="#FF0B33B5"
                            android:layout_weight="1"
                            android:textAllCaps="false" />
                        <Button android:text="DEL"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textColor="#FF0B33B5"
                            android:layout_weight="1"
                            android:textAllCaps="false" />
                        <Button
                            android:layout_width="60dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="40dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="1"
                            android:text="â‡¦"
                            android:textAllCaps="false"
                            android:background="@android:drawable/checkbox_off_background" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <Button android:text="7"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textColor="@android:color/black" />
                        <Button android:text="8"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textColor="@android:color/black" />
                        <Button android:text="9"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textColor="@android:color/black" />
                        <Button android:text="s"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textColor="#204EA3"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textAllCaps="false" />
                        <Button android:text="u"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textColor="#204EA3"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textAllCaps="false" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent">
                        <Button android:text="4"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textColor="@android:color/black" />
                        <Button android:text="5"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textColor="@android:color/black" />
                        <Button android:text="6"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textColor="@android:color/black" />
                        <Button android:text="z"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textColor="#204EA3"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textAllCaps="false" />
                        <Button android:text="t"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textColor="#204EA3"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textAllCaps="false" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent">
                        <Button android:text="1"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textColor="@android:color/black" />
                        <Button android:text="2"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textColor="@android:color/black" />
                        <Button android:text="3"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textColor="@android:color/black" />
                        <Button android:text="x"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textColor="#204EA3"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textAllCaps="false" />
                        <Button android:text="y"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textColor="#204EA3"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textAllCaps="false" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent">
                        <Button android:text="0"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background" />
                        <Button android:text="."
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background" />
                        <Button android:text="+"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black" />
                        <Button android:text="-"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textColor="#FF000000"
                            android:layout_weight="1"
                            android:background="@android:drawable/checkbox_off_background" />
                        <Button android:text="="
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@android:drawable/checkbox_off_background"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/background_dark"
                            android:layout_weight="1"
                            android:selectAllOnFocus="false"
                            android:textAllCaps="false" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
